import numpy as np
import astropy.units as u

# ISRU Baseline
regolith = 100 * u.ton
baseline_roi = 1.0

# Krystic Pulse
t = np.linspace(0, 0.5, 1000)
freq = 432.0
wave = np.sin(2 * np.pi * freq * t)
energy = np.trapz(wave**2, t)
scale = 1.0 / np.trapz(np.ones(1000)**2, t)
krystic_roi = energy * scale * 3.69
vol_cap = 3.69 * np.std(wave) * 0.06

print(f"ROI: {krystic_roi:.2f} | Vol_Cap: {vol_cap:.3f}")
